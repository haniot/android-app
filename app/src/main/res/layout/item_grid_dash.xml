<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutItemGrid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/colorCard"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="2dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageIten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/dash_item_description" />

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_below="@id/imageIten"
                android:layout_toEndOf="@id/imageIten"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textAlignment="textEnd"
                android:text="Batimento Cardiaco" />

            <TextView
                android:id="@+id/textMeasurement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@id/botAddMeasurement"
                android:text="096"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textMeasurementType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/textMeasurement"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/textMeasurement"
                android:text="bpm" />

            <Button
                android:id="@+id/botAddMeasurement"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/textDescription"
                android:layout_marginTop="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@android:drawable/ic_input_add" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>