<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/colorCard"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_weight_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:text="2017/10/27 22:23:44"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/measurement_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="60.5"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/unit_weight_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/measurement_weight"
                android:layout_alignBottom="@+id/measurement_weight"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/measurement_weight"
                android:text="@string/unit_kg"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/measurement_bodyfat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/measurement_weight"
                android:text="18.7"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/unit_percentage_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_alignBaseline="@+id/measurement_bodyfat"
                android:layout_alignBottom="@+id/measurement_bodyfat"
                android:layout_toEndOf="@+id/measurement_bodyfat"
                android:textSize="14sp"
                android:text="@string/unit_percentage" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/unit_percentage_textview"
                android:layout_alignBottom="@+id/unit_percentage_textview"
                android:layout_toEndOf="@+id/unit_percentage_textview"
                android:text="Body Fat"
                android:layout_marginStart="4dp"
                android:textSize="10sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
