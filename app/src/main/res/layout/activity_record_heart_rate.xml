<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.uepb.nutes.haniot.activity.devices.RecordHeartRateActivity">

    <LinearLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/box_measurement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax"
            tools:ignore="UselessParent">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/view_circle"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                app:cpb_background_progressbar_color="@color/colorAlertDanger"
                app:cpb_background_progressbar_width="6dp"
                app:cpb_progressbar_color="@color/colorAccent"
                app:cpb_progressbar_width="6dp" />

            <TextView
                android:id="@+id/heart_rate_measurement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/view_circle"
                android:layout_alignStart="@+id/view_circle"
                android:layout_marginBottom="51dp"
                android:layout_marginStart="21dp"
                android:text="000"
                android:textColor="@color/colorTextDark"
                android:textSize="65sp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/heart_imageview"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/heart_rate_measurement"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="19dp"
                android:layout_toEndOf="@+id/heart_rate_measurement"
                android:contentDescription=""
                app:srcCompat="@drawable/heart"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/heart_rate_measurement"
                android:layout_alignBottom="@+id/heart_rate_measurement"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@+id/heart_rate_measurement"
                android:text="bpm"
                android:textColor="@color/colorTextDark"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <Chronometer
                android:id="@+id/chronometer_heart_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:textColor="@color/colorTextDark"
                android:textSize="45sp" />

        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/toolbar" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_button_record_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"
        android:src="@drawable/ic_action_stop"
        app:elevation="6dp"
        app:fabSize="mini"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_button_record_pause_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="70dp"
        android:clickable="true"
        android:src="@drawable/ic_action_pause"
        app:elevation="6dp"
        app:fabSize="mini"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>


