<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorErrorBind">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <!-- BOX TITLE -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_device_error"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="@string/device_registered_error"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

        </RelativeLayout>
        <!-- END BOX TITLE -->

        <!-- BOX IMAGE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageSuccess"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/image"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_error_device" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="Não foi possível realizar o pareamento.\nCertifique-se que o dispositivo está próximo ou disponível para a conexão..."
                android:textColor="@color/colorWhite" />
        </LinearLayout>
        <!--END BOX IMAGE -->

        <!-- BOX BUTTON -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="bottom|end"
            android:padding="10dp">

            <TextView
                android:id="@+id/btn_try_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Tentar novamente"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />
        </LinearLayout>
        <!--END BOX BUTTON -->

    </LinearLayout>


</RelativeLayout>