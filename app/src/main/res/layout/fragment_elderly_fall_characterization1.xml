<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/colorTextDark">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical|clip_vertical|center_horizontal|center"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/question_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="O idoso necessitou de assitência médica?"
                    android:textSize="20sp"/>

            <RadioGroup
                    android:id="@+id/question_radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                <RadioButton
                        android:id="@+id/no_radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_left"
                        android:button="@android:color/transparent"
                        android:checked="false"
                        android:text="@string/no_text"/>

                <RadioButton
                        android:id="@+id/yes_radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_right"
                        android:button="@android:color/transparent"
                        android:checked="false"
                        android:text="@string/yes_text"/>
            </RadioGroup>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>