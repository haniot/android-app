<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_manually_add_measurement">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--Esses temas são importantes-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <!--Esses temas são importantes-->

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textChooseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textSize="18dp"
                android:text="Escolha a data"/>

            <View
                android:id="@+id/divDate"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toEndOf="@id/textChooseDate"
                android:layout_alignBaseline="@id/textChooseDate"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="?android:attr/listDivider" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_calendar_128"
                android:padding="50dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/textChooseDate"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <TextView
                android:id="@+id/textChooseTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/btnCalendar"
                android:textSize="18dp"
                android:text="Escolha a hora"/>

            <View
                android:id="@+id/divGlucose"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toEndOf="@id/textChooseTime"
                android:layout_alignBaseline="@id/textChooseTime"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="?android:attr/listDivider" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnClock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/clock"
                android:padding="50dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_below="@id/textChooseTime"/>

            <FrameLayout
                android:id="@+id/frame_measurement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/btnClock"/>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>