<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchorGravity="bottom|center">

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:id="@+id/buttonArrowLeft"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="115dp"
            android:layout_toStartOf="@+id/stepsProgressBar"
            android:background="@android:color/transparent"
            android:contentDescription="@string/LeftButton"
            android:src="@drawable/ic_arrow_left"/>

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/stepsProgressBar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_feet"
            app:cpb_background_progressbar_color="@android:color/darker_gray"
            app:cpb_background_progressbar_width="3dp"
            app:cpb_progressbar_color="@color/colorAccent"
            app:cpb_progressbar_width="6dp" />

        <ImageButton
            android:id="@+id/buttonArrowRight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/buttonArrowLeft"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/stepsProgressBar"
            android:background="@android:color/transparent"
            android:contentDescription="@string/rightbutton"
            android:src="@drawable/ic_arrow_right" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/lightProgress1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginStart="50dp"
            android:background="@drawable/ic_calories"
            app:cpb_background_progressbar_color="@android:color/darker_gray"
            app:cpb_background_progressbar_width="6dp"
            app:cpb_progressbar_color="@color/colorAccent"
            app:cpb_progressbar_width="3dp" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/lightProgress2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/lightProgress1"
            android:layout_marginEnd="50dp"
            android:background="@drawable/ic_distance"
            app:cpb_background_progressbar_color="@android:color/darker_gray"
            app:cpb_background_progressbar_width="3dp"
            app:cpb_progressbar_color="@color/colorAccent"
            app:cpb_progressbar_width="3dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@+id/lightProgress1"
            android:layout_below="@+id/lightProgress1"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="70dp"
            android:gravity="clip_horizontal"
            android:text="@string/Calories" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/lightProgress2"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/lightProgress1"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_marginEnd="70dp"
            android:text="@string/distance" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stepsProgressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/StepsNumber" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/textView2"
            android:background="@android:color/transparent" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>