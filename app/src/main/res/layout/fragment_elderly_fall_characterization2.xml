<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/colorTextDark"
              android:paddingBottom="@dimen/appIntroBottomBarHeight">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:weightSum="1">

        <TextView
                android:id="@+id/question_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Houve internação?"
                android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

        <RadioGroup
                android:id="@+id/question_radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

            <RadioButton
                    android:id="@+id/no_radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background_left"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:text="@string/no_text"/>

            <RadioButton
                    android:id="@+id/yes_radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background_right"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:text="@string/yes_text"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>