<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="@dimen/height_logo_drawer"
        android:layout_height="@dimen/height_logo_drawer"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/nutes_logo" />

    <TextView
        android:id="@+id/text_nutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/nutes"
        android:textColor="@android:color/primary_text_dark" />

    <TextView
        android:id="@+id/text_nutes_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nutes_desc"
        android:textSize="12sp"
        android:textColor="@android:color/primary_text_dark" />

</LinearLayout>