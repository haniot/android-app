<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textIdChildren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:gravity="end"
        android:text="Id: " />

    <TextView
        android:id="@+id/textRegisterDateChildren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/textIdChildren"
        android:layout_below="@+id/textIdChildren"
        android:layout_marginTop="5dp"
        android:gravity="end"
        android:text="Date: " />

    <TextView
        android:id="@+id/textIdNumberChildren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textIdChildren"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/textIdChildren"
        android:text="16625265416150" />

    <TextView
        android:id="@+id/textRegisterDateNumberChildren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textRegisterDateChildren"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/textIdChildren"
        android:text="25/8/2018" />

    <View
        android:id="@+id/div1"
        android:layout_width="3dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/textIdChildren"
        android:layout_marginStart="100dp"
        android:layout_toEndOf="@+id/textIdNumberChildren"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/btnSelectChildren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textIdChildren"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/div1"
        android:background="@android:drawable/ic_media_play" />

    <View
        android:id="@+id/div2"
        android:layout_width="3dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/textIdChildren"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/btnSelectChildren"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textIdChildren"
        android:layout_toEndOf="@+id/div2"
        android:background="@android:drawable/ic_menu_delete" />


</RelativeLayout>