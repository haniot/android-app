<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/textLetter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/ic_circle"
        android:padding="8dp"
        android:src="@drawable/x_boy" />

    <TextView
        android:id="@+id/textNameChildValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:layout_toStartOf="@+id/btnEditChildren"
        android:layout_toEndOf="@id/textLetter"
        android:gravity="center|start"
        android:maxLines = "1"
        android:text="JoÃ£o Mateus Soares da Silva"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textNameChildValue"
        android:layout_alignStart="@id/textNameChildValue"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="12 anos"
        android:textColor="@color/colorSubmenu" />

    <ImageView
        android:id="@+id/btnEditChildren"
        android:layout_width="30dp"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/btnMore"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_edit_black_24dp" />

    <ImageView
        android:id="@+id/btnMore"
        android:layout_width="30dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_more_vert_black_24dp" />

</RelativeLayout>