<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/box_layout_fall_risk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDeepPurple"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".elderly.assessment.FallRiskAssessmentResultActivity">

    <LinearLayout
        android:id="@+id/box_loading_fall_risk_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:id="@+id/fall_risk_laoding_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@null"
            android:textColor="@color/colorTextDark"
            android:textSize="22sp" />

        <ProgressBar
            android:id="@+id/fall_risk_result_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/laoding_result"
            android:textColor="@color/colorTextDark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/box_fall_risk_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_fall_risk_result"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/difficulty_seeing_elderly"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/title_fall_risk_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@null"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/result_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_background_dark"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:text="@string/bt_ok"
            android:textColor="@color/colorTextDark" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>