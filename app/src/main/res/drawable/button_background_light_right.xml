<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <corners android:bottomRightRadius="@dimen/button_assessment_radius" android:topRightRadius="@dimen/button_assessment_radius" />
            <solid android:color="@android:color/darker_gray" />
            <padding android:bottom="@dimen/button_assessment_padding" android:left="@dimen/radio_button_assessment_horizontal_padding" android:right="@dimen/radio_button_assessment_horizontal_padding" android:top="@dimen/button_assessment_padding" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:bottomRightRadius="@dimen/button_assessment_radius" android:topRightRadius="@dimen/button_assessment_radius" />
            <stroke android:width="1dp" android:color="@android:color/darker_gray" />
            <padding android:bottom="@dimen/button_assessment_padding" android:left="@dimen/radio_button_assessment_horizontal_padding" android:right="@dimen/radio_button_assessment_horizontal_padding" android:top="@dimen/button_assessment_padding" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:bottomRightRadius="@dimen/button_assessment_radius" android:topRightRadius="@dimen/button_assessment_radius" />
            <stroke android:width="1dp" android:color="@color/colorBlackGrey" />
            <padding android:bottom="@dimen/button_assessment_padding" android:left="@dimen/radio_button_assessment_horizontal_padding" android:right="@dimen/radio_button_assessment_horizontal_padding" android:top="@dimen/button_assessment_padding" />
        </shape>
    </item>
</selector>